send_tweets: <%= @send_tweets %>
secret_token: "<%= @config['secret_token'] %>"
base_url:     "<%= @config['base_url'] %>"
tries_limit: <%= @config['tries_limit'] %>
teasers:
<% @config['teasers'].each do |t| -%>
  - "<%= t %>"
<% end %>
excluded_categories:
<% @config['excluded_categories'].each do |ec| -%>
  - "<%= ec %>"
<% end %>
included_categories:
<% @config['included_categories'].each do |ic| -%>
  - "<%= ic %>"
<% end %>
add_via: <%= @config['add_via'] %>
zone_offset: <%= @config['zone_offset'] %>
database:
  mysql_host:   "<%= @config['database']['mysql_host'] %>"
  mysql_port:   "<%= @config['database']['mysql_port'] %>"
  mysql_user:   "<%= @config['database']['mysql_user'] %>"
  mysql_pass:   "<%= @config['database']['mysql_pass'] %>"
  mysql_db:     "<%= @config['database']['mysql_db'] %>"
  table_prefix: "<%= @config['database']['table_prefix'] %>"
shortener:
  type:  "<%= @config['shortener']['type'] %>"
  username:  "<%= @config['shortener']['username'] %>"
  token: "<%= @config['shortener']['token'] %>"
twitter:
  username: "<%= @config['twitter']['username'] %>"
  consumer_key: "<%= @config['twitter']['consumer_key'] %>"
  consumer_secret: "<%= @config['twitter']['consumer_secret'] %>"
  access_token: "<%= @config['twitter']['access_token'] %>"
  access_token_secret: "<%= @config['twitter']['access_token_secret'] %>"
reporting:
  redis_host:   "<%= @config['reporting']['redis_host'] %>"
  redis_port:   "<%= @config['reporting']['redis_port'] %>"
